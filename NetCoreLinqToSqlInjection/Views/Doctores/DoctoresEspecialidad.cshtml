@model List<Doctor>

<h1>Filtrar doctores por especialidad</h1>

<form method="post" class="mt-3">
    <label class="form-label">Especialidad</label>
    <input type="text" class="form-control" name="especialidad" />
    <button class="btn btn-warning mt-3">Buscar doctores</button>
</form>

<h2 class="mx-auto w-75 mt-3 text-danger">@ViewData["MENSAJE"]</h2>

@if (Model != null)
{
    <table class="table table-borderless">
        <thead>
            <tr>
                <th>Apellido</th>
                <th>Especialidad</th>
                <th>Salario</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Doctor doctor in Model)
            {
                <tr>
                    <td>@doctor.Apellido</td>
                    <td>@doctor.Especialidad</td>
                    <td>@doctor.Salario</td>
                </tr>
            }
        </tbody>
    </table>
}